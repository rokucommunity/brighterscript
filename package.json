{
  "name": "brighterscript",
  "version": "0.2.1",
  "description": "A superset of Roku's BrightScript language.",
  "scripts": {
    "preversion": "npm run build && npm run tslint && npm run test",
    "prepare": "npm run build",
    "build": "rimraf out && tsc",
    "watch": "rimraf out && tsc --watch",
    "prepublishOnly": "npm run build",
    "tslint": "tslint -p tsconfig.json -c tslint.json",
    "test": "ts-mocha \"src/**/*.spec.ts\" --full-trace",
    "test:coverage": "nyc mocha \"src/**/*.spec.ts\" --full-trace",
    "test:watch": "ts-mocha \"src/**/*.spec.ts\" --full-trace --watch --watch-extensions ts",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "dep-graph": "madge --image graph.svg --extensions ts ./src/parser"
  },
  "files": [
    "dist/**/!(*.spec.*)*",
    "bsconfig.schema.json"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "bsc": "dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rokucommunity/brighterscript.git"
  },
  "author": "",
  "license": "MIT",
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chokidar": "^1.7.5",
    "@types/command-line-args": "^5.0.0",
    "@types/fs-extra": "^5.0.1",
    "@types/mocha": "^5.2.5",
    "@types/node": "^11.9.0",
    "@types/request": "^2.47.0",
    "@types/sinon": "^7.0.4",
    "brightscript-formatter": "^1.7.1",
    "chai": "^4.2.0",
    "chai-files": "^1.4.0",
    "codecov": "^3.1.0",
    "coveralls": "^3.0.0",
    "madge": "^3.4.4",
    "mocha": "^5.2.0",
    "node-run-cmd": "^1.0.1",
    "nyc": "^14.1.1",
    "object.pick": "^1.3.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.2.2",
    "source-map-support": "^0.5.13",
    "testdouble": "^3.5.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.3.0",
    "tslint": "^5.12.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "tslint-origin-ordered-imports-rule": "^1.1.2",
    "typescript": "^3.5.3",
    "vscode-jsonrpc": "^4.0.0"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "chokidar": "^3.0.2",
    "clear": "^0.1.0",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.5",
    "cross-platform-clear-console": "^2.3.0",
    "debounce-promise": "^3.1.0",
    "fs-extra": "^7.0.1",
    "jsonc-parser": "^2.1.1",
    "long": "^3.2.0",
    "luxon": "^1.8.3",
    "moment": "^2.23.0",
    "p-settle": "^2.1.0",
    "roku-deploy": "^2.3.0",
    "source-map": "^0.7.3",
    "vscode-languageserver": "^5.2.1",
    "vscode-uri": "^1.0.6",
    "xml2js": "^0.4.19"
  }
}
